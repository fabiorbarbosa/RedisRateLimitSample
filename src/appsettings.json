{
  "RateLimiting": {
    "Policies": [
      {
        "PolicyName": "FixedApi",
        "PermitLimit": 10,
        "WindowSeconds": 60,
        "Cookie": {
          "Name": "rlk_api",
          "Secret": "secret-fixed-api-CHANGE-ME",
          "Secure": true,
          "SameSite": "Lax",
          "Path": "/"
        },
        "TokenEndpoint": "/auth/issue-token"
      },
      {
        "PolicyName": "FixedAdmin",
        "PermitLimit": 5,
        "WindowSeconds": 60,
        "Cookie": {
          "Name": "rlk_admin",
          "Secret": "secret-fixed-admin-CHANGE-ME",
          "Secure": true,
          "SameSite": "Lax",
          "Path": "/"
        }
      }
    ]
  },
  "Redis": {
    "Configuration": "localhost:6379,abortConnect=false"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
